<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>consultaServ</servlet-name>
        <servlet-class>ja_jdbc_plpgsql.servlet.consultaServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listaProdData</servlet-name>
        <servlet-class>ja_jdbc_plpgsql.servlet.listaProdData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>totaisFunMes</servlet-name>
        <servlet-class>ja_jdbc_plpgsql.servlet.totaisFunMes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PP</servlet-name>
        <jsp-file>/TPM.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>serialArquivo</servlet-name>
        <servlet-class>ja_jdbc_plpgsql.servlet.serialArquivo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>consultaServ</servlet-name>
        <url-pattern>/consultaServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listaProdData</servlet-name>
        <url-pattern>/listaProdData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>totaisFunMes</servlet-name>
        <url-pattern>/totaisFunMes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PP</servlet-name>
        <url-pattern>/PP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>serialArquivo</servlet-name>
        <url-pattern>/serialArquivo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>FormConsulta.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>CewolfServlet</servlet-name>
        <servlet-class>de.laures.cewolf.CewolfRenderer</servlet-class>
        <!-- sets storage implementation -->
        <init-param>
            <param-name>storage</param-name>
            <param-value>de.laures.cewolf.storage.TransientSessionStorage</param-value>
        </init-param> 
        <!-- sets overlib.js location relative to webapp -->
        <init-param>
            <param-name>overliburl</param-name>
            <param-value>/etc/overlib.js</param-value>
        </init-param>
        <!-- turn on or off debugging logging-->
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param> 
        <!-- store images on file system, not in session -->
        <!---->
        <init-param>
            <param-name>storage</param-name>
            <param-value>de.laures.cewolf.storage.FileStorage</param-value>
        </init-param>
        <init-param>
            <param-name>FileStorage.deleteOnExit</param-name>
            <param-value>true</param-value>
        </init-param> 
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CewolfServlet</servlet-name>
        <url-pattern>/cewolf/*</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <jsp-config>
    </jsp-config>
</web-app>
